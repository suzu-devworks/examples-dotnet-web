{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    },
    "NLog": {
      "IncludeScopes": true,
      "RemoveLoggerFactoryFilter": true
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "Off",
    "internalLogFile": "${basedir}/nlog-internal.log",
    "variables": {
      "logdir": "${basedir}/logs",
      "defaultLayout": "${date:format=yyyy-MM-ddTHH\\:mm\\:ss.fffK}|${level:padding=-5}|${processid}|${threadid:padding=2}|${logger}|${message} ${exception:format=tostring}"
    },
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      },
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],
    "targets": {
      "async": true,
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${MicrosoftConsoleLayout}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ],
        "wordHighlightingRules": [
          {
            "regex": "info:",
            "foregroundColor": "Green"
          },
          {
            "regex": "dbug:|trace:",
            "foregroundColor": "Yellow"
          }
        ]
      },
      "all-file": {
        "type": "Null"
      },
      "debuglogfile": {
        "type": "File",
        "fileName": "${logdir}/${machinename}/${processname}_examples_${shortdate}.log",
        "maxArchiveFiles": "3",
        "concurrentWrites": "true",
        "keepFileOpen": "false",
        "layout": "${defaultLayout}"
      },
      "rollinglogfile": {
        "type": "File",
        "fileName": "${logdir}/${machinename}/${processname}_examples.log",
        "archiveFileName": "${logdir}/${machinename}/${processname}_examples.log.{#}",
        "archiveNumbering": "Rolling",
        "archiveAboveSize": "1048576",
        "maxArchiveFiles": "3",
        "concurrentWrites": "true",
        "keepFileOpen": "false",
        "layout": "${defaultLayout}"
      }
    },
    "rules": [
      // All logs, including from Microsoft
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "all-file"
      },
      // Output hosting lifetime messages to console target for faster startup detection
      {
        "logger": "Microsoft.Hosting.Lifetime",
        "maxLevel": "Info",
        "writeTo": "rollinglogfile, debuglogfile, logconsole",
        "final": true
      },
      {
        "logger": "Microsoft.AspNetCore.Hosting.Diagnostics",
        "maxLevel": "Info",
        "writeTo": "rollinglogfile, debuglogfile, logconsole",
        "final": true
      },
      // Output EntityFrameworkCore SQL to logfile.
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "maxLevel": "Info",
        "writeTo": "rollinglogfile, debuglogfile, logconsole",
        "final": true
      },
      // Skip non-critical Microsoft logs and so log only own logs (BlackHole) 
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "System.Net.Http.*",
        "maxLevel": "Info",
        "final": true
      },
      // Output default log
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "rollinglogfile, debuglogfile"
      }
    ]
  },
  "PathBase": "/app",
  "AllowedHosts": "*"
}
